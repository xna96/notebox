{
  "name": "notebox-backend",
  "version": "1.0.0",
  "description": "Azure Functions backend for Notebox",
  "scripts": {
    "build": "npm run clean && tsc && copyfiles -u 2 \"src/functions/**/function.json\" dist/ && xcopy dist\\functions\\* dist\\ /E /I /Y && rmdir /s /q dist\\functions && copyfiles host.json local.settings.json dist/",
    "watch": "tsc --watch",
    "clean": "npx rimraf dist",
    "prestart": "npm run clean && npm run build",
    "start": "func start",
    "test": "echo \"No tests yet...\"",
    "dev": "concurrently \"npm run watch\" \"npm run start\""
  },
  "dependencies": {
    "@azure/cosmos": "^4.0.0",
    "@azure/functions": "^4.8.0",
    "module-alias": "^2.2.3"
  },
  "devDependencies": {
    "@types/module-alias": "^2.0.4",
    "@types/node": "^18.19.130",
    "concurrently": "^9.2.1",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.10",
    "typescript": "^4.9.5"
  },
  "_moduleAliases": {
    "@services": "dist/services",
    "@repositories": "dist/repositories",
    "@models": "dist/models",
    "@utils": "dist/utils",
    "@registerAliases": "dist/registerAliases.js"
  }
}
